{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss"
  ],
  "ignoreFiles": ["**/*.js", "**/*.ts", "**/*.tsx"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": null,
    "no-invalid-position-at-import-rule": null
  }
}
